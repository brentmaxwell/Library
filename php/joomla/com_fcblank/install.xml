	<author>Brent Maxwell, Anthony D. Paul</author>
	<authorEmail>bmaxwell@fathomcreative.com, apaul@fathomcreative.com</authorEmail>
	<copyright>Copyright 2010, Fathom Creative</copyright>
	<license>MIT</license>
	<!--  The version string is recorded in the components table -->
	<version>0.9.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Blank component</description>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>fcblank.php</filename>
		<filename>router.php</filename>
		<filename>models/index.html</filename>
		<filename>models/list.php</filename>
